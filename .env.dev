# Database Configuration (Local PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/signalzero_dev
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=org.postgresql.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=create-drop
SPRING_JPA_SHOW_SQL=true

# Solace PubSub+ (Local Docker)
SOLACE_HOST=tcp://localhost:55555
SOLACE_VPN=default
SOLACE_USERNAME=admin
SOLACE_PASSWORD=admin
SOLACE_CLIENT_NAME=signalzero-backend-dev

# Stripe Payment Processing (Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef
STRIPE_SECRET_KEY=sk_test_51234567890abcdef
STRIPE_WEBHOOK_SECRET=whsec_test1234567890
STRIPE_SUCCESS_URL=http://localhost:8080/payment/success
STRIPE_CANCEL_URL=http://localhost:8080/payment/cancel

# Application Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
JWT_SECRET=dev-jwt-secret-key-for-development-only-not-secure
JWT_EXPIRATION=86400000

# =============================================================================
# üü° OPTIONAL APIS (Configure as available)
# =============================================================================

# Reddit API (Free - Sign up at reddit.com/prefs/apps)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
