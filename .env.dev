# YouTube Data API (Free quota - Google Cloud Console)
YOUTUBE_API_KEY=

# News API (Free tier - newsapi.org)
NEWSAPI_KEY=

# Twitter API (Optional - $100/month)
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Google Trends (Free via pytrends library)
GOOGLE_TRENDS_ENABLED=true

# =============================================================================
# üõ†Ô∏è DEVELOPMENT SETTINGS
# =============================================================================

# Operating Mode (Development optimized)
DEMO_MODE=true
USE_MOCK_DATA=true
ENABLE_RATE_LIMITING=false
DEBUG_MODE=true
ENABLE_DEV_TOOLS=true

# Agent Configuration (Fast for development)
AGENT_TIMEOUT_MS=3000
MAX_CONCURRENT_ANALYSES=5
ENABLE_AGENT_LOGGING=true
AGENT_MOCK_DELAY_MS=500

# Security Settings (Relaxed for dev)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
ENABLE_CSRF=false
SESSION_TIMEOUT=7200
ALLOW_INSECURE_HTTP=true

# Database Settings (Development optimized)
DATABASE_POOL_SIZE=3
CONNECTION_TIMEOUT_MS=5000
IDLE_TIMEOUT_MS=300000
MAX_LIFETIME_MS=1800000

# Solace Settings (Development)
SOLACE_CONNECTION_POOL_SIZE=5
SOLACE_RECONNECT_RETRIES=3
SOLACE_MESSAGE_TTL_MS=30000

# Email Configuration (MailHog for dev testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=dev@s1gnalzero.localhost
SMTP_TLS_ENABLED=false

# Logging (Verbose for development)
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/dev/signalzero.log
ENABLE_SQL_LOGGING=true
ENABLE_HTTP_LOGGING=true
ENABLE_SOLACE_LOGGING=true

# =============================================================================
# üöÄ HACKATHON SPECIFIC
# =============================================================================

# Quick Demo Values
HACKATHON_MODE=true
AUTO_SEED_DATA=true
BYPASS_PAYMENT_VERIFICATION=true
UNLIMITED_FREE_ANALYSES=true
FAST_ANALYSIS_MODE=true

# Demo Data
PRELOAD_DEMO_USERS=true
PRELOAD_WALL_OF_SHAME=true
ENABLE_DEMO_ENDPOINTS=true

# Performance (Relaxed for dev)
HTTP_CLIENT_TIMEOUT=15000
ENABLE_REQUEST_CACHING=false
CACHE_TTL=300

# =============================================================================
# üß™ TESTING & DEBUGGING
# =============================================================================

# Testing Configuration
ENABLE_TEST_ENDPOINTS=true
ALLOW_DANGEROUS_OPERATIONS=true
RESET_DB_ON_STARTUP=false

# Monitoring (Local)
ENABLE_METRICS=true
METRICS_PORT=8081
HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS_ENABLED=true

# External Services (Disabled for dev)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
ENABLE_EXTERNAL_ANALYTICS=false

# Cache (Disabled for simplicity)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false
CACHE_TTL=300

# =============================================================================
# üêç PYTHON AGENTS CONFIGURATION
# =============================================================================

# Python Agent Settings
PYTHON_AGENTS_BASE_URL=http://localhost:8000
PYTHON_LOG_LEVEL=DEBUG
PYTHON_MOCK_MODE=true

# Agent Specific Settings
BOT_DETECTOR_ENABLED=true
TREND_ANALYZER_ENABLED=true
REVIEW_VALIDATOR_ENABLED=true
PAID_PROMOTION_DETECTOR_ENABLED=true
SCORE_AGGREGATOR_ENABLED=true

# =============================================================================
# üîß DEVELOPMENT UTILITIES
# =============================================================================

# Hot Reload
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# Development URLs
FRONTEND_DEV_URL=http://localhost:3000
BACKEND_DEV_URL=http://localhost:8080
SOLACE_MANAGEMENT_URL=http://localhost:8080

# IDE Configuration
ENABLE_JMX=true
JMX_PORT=9999
ENABLE_DEBUG_PORT=true
DEBUG_PORT=5005
