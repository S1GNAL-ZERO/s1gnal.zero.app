# S1GNAL.ZERO Production Environment
# Secure configuration for production deployment

# =============================================================================
# üî¥ REQUIRED (Critical - Must be set)
# =============================================================================

# Database Configuration (Production PostgreSQL)
DB_URL=jdbc:postgresql://your-production-db-host:5432/signalzero_prod
DB_USERNAME=signalzero_user
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD
DB_DRIVER=org.postgresql.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Solace PubSub+ (Production Cloud)
SOLACE_HOST=tcps://your-production-solace-host:55443
SOLACE_VPN=signalzero-prod
SOLACE_USERNAME=signalzero-prod-user
SOLACE_PASSWORD=CHANGE_ME_SECURE_SOLACE_PASSWORD
SOLACE_CLIENT_NAME=signalzero-backend-prod

# Stripe Payment Processing (Live Mode)
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME_LIVE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_CHANGE_ME_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_LIVE_WEBHOOK_SECRET
STRIPE_SUCCESS_URL=https://s1gnalzero.com/payment/success
STRIPE_CANCEL_URL=https://s1gnalzero.com/payment/cancel

# Application Configuration (Production)
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod
JWT_SECRET=CHANGE_ME_SUPER_SECURE_256_BIT_JWT_SECRET_KEY_FOR_PRODUCTION
JWT_EXPIRATION=3600000

# SSL/TLS Configuration
SERVER_SSL_ENABLED=true
SERVER_SSL_KEY_STORE=/app/certs/keystore.p12
SERVER_SSL_KEY_STORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD
SERVER_SSL_KEY_STORE_TYPE=PKCS12

# =============================================================================
# üü° EXTERNAL APIS (Production Keys)
# =============================================================================

# Reddit API (Production)
REDDIT_CLIENT_ID=CHANGE_ME_REDDIT_CLIENT_ID
REDDIT_CLIENT_SECRET=CHANGE_ME_REDDIT_CLIENT_SECRET
REDDIT_USER_AGENT=SignalZero/1.0

# YouTube Data API (Production quota)
YOUTUBE_API_KEY=CHANGE_ME_YOUTUBE_API_KEY

# News API (Production tier)
NEWSAPI_KEY=CHANGE_ME_NEWSAPI_KEY

# Twitter API (Production)
TWITTER_BEARER_TOKEN=CHANGE_ME_TWITTER_BEARER_TOKEN
TWITTER_API_KEY=CHANGE_ME_TWITTER_API_KEY
TWITTER_API_SECRET=CHANGE_ME_TWITTER_API_SECRET

# Google Trends (Production)
GOOGLE_TRENDS_ENABLED=true

# =============================================================================
# üîí SECURITY SETTINGS (Production Hardened)
# =============================================================================

# Operating Mode (Production)
DEMO_MODE=false
USE_MOCK_DATA=false
ENABLE_RATE_LIMITING=true
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false

# Agent Configuration (Production optimized)
AGENT_TIMEOUT_MS=10000
MAX_CONCURRENT_ANALYSES=50
ENABLE_AGENT_LOGGING=false
AGENT_RETRY_ATTEMPTS=3

# Security Settings (Hardened)
CORS_ALLOWED_ORIGINS=https://s1gnalzero.com,https://www.s1gnalzero.com
ENABLE_CSRF=true
SESSION_TIMEOUT=1800
ALLOW_INSECURE_HTTP=false
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=5000

# Database Settings (Production optimized)
DATABASE_POOL_SIZE=20
CONNECTION_TIMEOUT_MS=30000
IDLE_TIMEOUT_MS=600000
MAX_LIFETIME_MS=1800000
LEAK_DETECTION_THRESHOLD=60000

# Solace Settings (Production)
SOLACE_CONNECTION_POOL_SIZE=20
SOLACE_RECONNECT_RETRIES=10
SOLACE_MESSAGE_TTL_MS=300000
SOLACE_KEEPALIVE_INTERVAL_MS=30000

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=CHANGE_ME_SENDGRID_API_KEY
SMTP_FROM=noreply@s1gnalzero.com
SMTP_TLS_ENABLED=true

# Logging (Production level)
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/prod/signalzero.log
ENABLE_SQL_LOGGING=false
ENABLE_HTTP_LOGGING=false
ENABLE_SOLACE_LOGGING=false
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_FILES=30

# =============================================================================
# üöÄ PRODUCTION FEATURES
# =============================================================================

# Operational Mode
HACKATHON_MODE=false
AUTO_SEED_DATA=false
BYPASS_PAYMENT_VERIFICATION=false
UNLIMITED_FREE_ANALYSES=false
STRICT_USAGE_LIMITS=true

# Performance (Production optimized)
HTTP_CLIENT_TIMEOUT=30000
ENABLE_REQUEST_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# CDN and Static Assets
CDN_BASE_URL=https://cdn.s1gnalzero.com
STATIC_ASSETS_VERSION=v1.0.0
ENABLE_ASSET_COMPRESSION=true

# =============================================================================
# üìä MONITORING & ANALYTICS (Production)
# =============================================================================

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=8081
HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS_ENABLED=false

# External Services (Production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ENABLE_EXTERNAL_ANALYTICS=true

# Cache (Redis Production)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_ENABLED=true
REDIS_SSL_ENABLED=true
CACHE_TTL=3600
REDIS_CONNECTION_POOL_SIZE=10

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=CHANGE_ME_NEW_RELIC_LICENSE_KEY
NEW_RELIC_APP_NAME=SignalZero-Production

# =============================================================================
# üêç PYTHON AGENTS CONFIGURATION (Production)
# =============================================================================

# Python Agent Settings (Production)
PYTHON_AGENTS_BASE_URL=https://agents.s1gnalzero.com
PYTHON_LOG_LEVEL=INFO
PYTHON_MOCK_MODE=false
PYTHON_AGENT_API_KEY=CHANGE_ME_AGENTS_API_KEY

# Agent Specific Settings
BOT_DETECTOR_ENABLED=true
TREND_ANALYZER_ENABLED=true
REVIEW_VALIDATOR_ENABLED=true
PAID_PROMOTION_DETECTOR_ENABLED=true
SCORE_AGGREGATOR_ENABLED=true

# Agent Performance (Production)
AGENT_MAX_RETRIES=5
AGENT_BACKOFF_MULTIPLIER=2
AGENT_MAX_CONCURRENT_REQUESTS=20

# =============================================================================
# üåê PRODUCTION INFRASTRUCTURE
# =============================================================================

# Load Balancer
LOAD_BALANCER_HEALTH_CHECK_PATH=/actuator/health
LOAD_BALANCER_TIMEOUT=30

# Container Settings
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
SPRING_PROFILES_ACTIVE=prod

# Backup and Recovery
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_S3_BUCKET=s1gnalzero-backups

# =============================================================================
# üîê SECRETS MANAGEMENT
# =============================================================================

# AWS Secrets Manager (if using AWS)
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_ENABLED=false
AWS_SECRET_NAME=signalzero/prod/secrets

# Kubernetes Secrets (if using K8s)
K8S_SECRETS_ENABLED=false
K8S_NAMESPACE=signalzero-prod

# =============================================================================
# üö® ALERTING & NOTIFICATIONS
# =============================================================================

# Error Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERTS_ENABLED=true
ALERT_EMAIL_RECIPIENTS=alerts@s1gnalzero.com,team@s1gnalzero.com

# Performance Alerts
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
RESPONSE_TIME_ALERT_THRESHOLD=5000

# Business Alerts
DAILY_REVENUE_ALERT_ENABLED=true
USAGE_SPIKE_ALERT_THRESHOLD=1000
ERROR_RATE_ALERT_THRESHOLD=5

# =============================================================================
# üåç MULTI-REGION CONFIGURATION (Future)
# =============================================================================

# Geographic Settings
PRIMARY_REGION=us-east-1
BACKUP_REGION=us-west-2
ENABLE_MULTI_REGION=false

# Data Replication
DB_REPLICATION_ENABLED=false
SOLACE_DISASTER_RECOVERY_ENABLED=false

# =============================================================================
# üìà SCALING CONFIGURATION
# =============================================================================

# Auto-scaling
MIN_INSTANCES=2
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=50
CIRCUIT_BREAKER_TIMEOUT=60000

# Bulkhead Pattern
ANALYSIS_THREAD_POOL_SIZE=50
PAYMENT_THREAD_POOL_SIZE=10
NOTIFICATION_THREAD_POOL_SIZE=5
